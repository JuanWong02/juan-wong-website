---
import './src/styles/global.css'
import NotFound from '../assets/img/notfound.jpg';
const title = "Página no encontrada";
const message = "Parece que te perdiste, regresa al inicio y descubre más sobre mi"
---


<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="flex flex-col items-center justify-center h-screen bg-background text-center">
    <h1 class=" bg-primary text-container rounded-3xl mb-10 p-4 mt-4 text-3xl sm:text-4xl sm:p-6">{title} </h1>
      <img class="rounded-full mx-auto h-[30%]  sm:h-[35%]  md:h-[40%] mb-4 hover:scale-105 hover:rotate-2 transition-transform duration-200 delay-100" src={NotFound.src} alt="Imagen tipo sketch de Juan Carlos Wong Reyes de perfil, mirando hacia la izquierda">
    <a href="/" class="mt-6 px-4 py-2 mb-4 bg-container  rounded-lg text-2xl sm:text-xl hover:text-container hover:bg-button-active transition-transform duration-200 delay-100 hover:scale-150">
      Volver al inicio
    </a>
    <p class=" text-lg md:text-xl mt-4 bg-primary text-container p-4 max-w-[85%] rounded-br-4xl m-4">{message}</p>
  </body>
</html>