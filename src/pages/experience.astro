---
import Layout from '../layouts/Layout.astro';
import JobCard from '../components/JobCard.astro';
import Skills from '../components/Skills.astro';
---

<Layout>
	<section class=" min-h-screen  transition-all duration-500 ease-in-out scale-95 md:opacity-100 md:scale-100 flex flex-col justify-center gap-4 lg:gap-8 p-2 md:p-6 pt-5  lg:grid lg:grid-cols-6 lg:grid-rows-11 lg:p-12 lg:pt-4 text-container overflow-hidden max-w-screen-md lg:max-w-screen-2xl mx-auto">
    
      <div class="col-span-6 flex  justify-center self-center items-center text-4xl md:text-6xl animate-slide-down duration-300 transition-all font-title">
        <h1>Experiencia Laboral</h1>
      </div>
      <div class="col-span-6 row-span-5 row-start-2 m-4 grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 justify-center flex-1 ">
       <JobCard
       company='Honeywell Chihuahua'
       role='Creador Multimedia'
       period='marzo de 2022 - agosto de 2023'
       tasks={['Captura de foto y video','Edición de imagen y video','Creación de comunicados','Supervisión de los canales de comunicación']}
       />

       <JobCard
       company='CRM-CA'
       role='Consultor Siebel'
       period='diciembre de 2023 - a la fecha'
       tasks={['Testing en Siebel','Solución de errores','Desarrollo de funcionalidades','Creación de Datafix']}
       />       
       

      </div>
      <div class="col-span-6 row-start-7 flex justify-center items-center text-4xl md:text-6xl animate-slide-down transition-all ease-in-out font-title">
        <h1>Skills</h1>
      </div>
      <div class="col-span-6 row-span-4 row-start-8 flex justify-center md:m-4">
        <ul class="grid grid-cols-2 lg:grid-cols-4 gap-x-10 pt-4 gap-y-6 md:gap-y-2 text-center text-lg md:text-3xl items-center">
          <Skills
          skills={[
            'Ingles',
            'Photoshop',
            'After Effects',
            'Premier Pro',
            'Davinci Resolve',
            'Audition',
            'Lightroom',
            'Ilustrator',
            'InDesign',
            'Javascript',
            'Python',
            'Desarrollo Web'
          ]}
          
          />
     
        </ul>
      </div>

	</section>
    
</Layout>