---
import Layout from '../layouts/Layout.astro';
import ContactImg from '../assets/img/Jr vector style.jpg'
import ContactInfo from '../components/ContactInfo.astro';
---

<Layout>
  <section class="min-h-screen flex flex-col lg:grid lg:grid-cols-6 lg:grid-rows-5 gap-4 text-white p-4 pr-12 pl-12 gap-x-4 overflow-hidden max-w-screen-2xl mx-auto">
    <div class="col-span-3 row-span-3 sm:row-span-4 md:row-span-5 row-start-1 flex items-center order-3">
      <img class="rounded-2xl object-cover h-full mx-auto animate-rotate-y hover:scale-102 transition-transform duration-300 ease-in-out" src={ContactImg.src} alt="Imagen creativa, editada de Juan Carlos Wong Reyes">
    </div>
    <div class="pt-4 md:p-4 lg:col-span-3 lg:col-start-4 flex items-center flex-col bg-primary rounded-2xl animate-slide-right ">
      <h1 class="font-title text-3xl md:text-4xl transition-all duration-300 lg:text-5xl xl:text-6xl text-center">¿Interesado en mi trabajo?</h1>
    </div>
    <div class="font-text p-4 rounded-2xl lg:col-span-3 lg:row-span-4 lg:col-start-4 lg:row-start-2 bg-primary animate-slide-right delay-200 ">
      <h2 class="font-title  text-2xl lg:text-4xl text-center pb-8">¡Contáctame!</h2>
      <ul class="flex flex-col items-center text-start text-xl">
        <ContactInfo
        links={
         [
          {
            text: "juanwong0211@gmail.com",
            url: "mailto:juanwong0211@gmail.com?subject=Me%20interesa%20tu%20trabajo"
          }
         ] 
        }     
        
        />
      </ul>
      <h2 class="font-title text-2xl lg:text-4xl text-center pt-12 md:pt-24 pb-8">Mi trabajo</h2>
      <ul class="flex flex-col items-center text-2xl gap-y-4 pb-4">
        <ContactInfo
        links={
          [
            {
              text: "Behance",
              url: "https://www.behance.net/juanwong6"
            },
            {
              text: "Github",
              url: "https://github.com/JuanWong02"
            }
          ]
        }
        
        
        />
       
      </ul>
    </div>
  </section>
  
</Layout>