---
import Layout from '../layouts/Layout.astro';
import ContactImg from '../assets/img/contact-image.webp'
import ContactInfo from '../components/ContactInfo.astro';
---

<Layout title="Ing. Juan Carlos Wong Reyes | Contacto">
  <section class="min-h-screen  transition-all duration-500 ease-in-out scale-95 md:opacity-100 md:scale-100 flex flex-col justify-center gap-12 md:gap-6  lg:gap-8 p-2 md:p-6 pt-5  xl:grid xl:grid-cols-6 xl:grid-rows-5 lg:p-12 lg:pt-4 text-container overflow-hidden max-w-screen-md lg:max-w-screen-2xl mx-auto pr-6 pl-6">
    <div class="col-span-3 row-span-3  sm:row-span-4 md:row-span-5 lg:row-start-1 flex items-center order-3 lg:order-1">
      <img class="rounded-2xl object-cover max-h-[50vh] md:max-h-[40vh] lg:max-h-[70vh] xl:max-h-full h-full mx-auto animate-rotate-y hover:scale-102 transition-transform duration-300 ease-in-out  " src={ContactImg.src} alt="Imagen creativa, editada de Juan Carlos Wong Reyes">
    </div>
    <div class=" pt-0 lg:pt-4 md:p-2 lg:col-span-3 h-auto lg:col-start-4 flex items-center justify-center flex-col  rounded-2xl animate-slide-right ">
      <h1 class="font-title font-bold text-4xl md:text-5xl lg:text-6xl transition-all duration-300 xl:text-7xl text-center">¿Interesado en mi trabajo?</h1>
    </div>
    <div class="font-text p-2  rounded-2xl flex flex-col items-center  justify-center lg:col-span-3 lg:row-span-4 lg:col-start-4 lg:row-start-2  delay-200 ">
      <h2 class="font-title font-extrabold text-secondary justify-center self-center items-center text-4xl md:text-6xl animate-slide-down duration-300 transition-all pb-8">¡Contáctame!</h2>
      <ul class="flex flex-col items-center text-start text-xl md:text-3xl lg:text-4xl">
        <ContactInfo
        links={
         [
          {
            text: "Envíame un mensaje",
            url: "https://forms.gle/DuSitC6zwLM9ZTRE7",
            icon: "fa-envelope"
          }
         ] 
        }     
        
        />
      </ul>
      <h2 class="font-title font-extrabold text-secondary justify-center self-center items-center text-4xl md:text-6xl animate-slide-down duration-300 transition-all pb-8 pt-12 md:pt-24">Mi trabajo</h2>
      <ul class="flex flex-col items-center text-xl md:text-3xl lg:text-4xl gap-y-4  pb-4 ">
        <ContactInfo
        links={
          [
            {
              text: "Behance",
              url: "https://www.behance.net/juanwong6",
              icon: "fa-behance"
            },
            {
              text: "Github",
              url: "https://github.com/JuanWong02",
              icon: "fa-github"
            }
          ]
        }
        
        
        />
       
      </ul>
    </div>
  </section>
  
</Layout>