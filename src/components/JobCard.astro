---
type Props = {
  company: string;
  role: string;
  period: string;
  tasks: string[];
  bgColor?: string;
  textColor?: string;
  classProp?: string;
}


const {company, role, period, tasks, bgColor = 'bg-background', textColor = 'text-container' , classProp}: Props = Astro.props;
---

<div class=`p-6 rounded-2xl h-auto sm:h-64 md:h-80 lg:h-96 ${bgColor} ${textColor} ${classProp}` >
  <h2 class="text-2xl md:text-4xl">{company}</h2>
  <h2 class="text-2xl md:text-4xl"> - {role}</h2>
  <h3 class="text-xl pb-4 md:text-2xl">{period}</h3>
  <ul class="text-lg md:text-xl">
   {tasks.map((task) => {
    return <li>{task}</li>
   })}
  </ul>
</div>