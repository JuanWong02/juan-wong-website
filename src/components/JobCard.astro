---
type Props = {
  company: string;
  role: string;
  period: string;
  tasks: string[];
  bgColor?: string;
  textColor?: string;
  classProp?: string;
}


const {company, role, period, tasks, bgColor = 'bg-background', textColor = 'text-container' , classProp}: Props = Astro.props;
---

<div class=`p-6 rounded-2xl overflow-y-auto h-auto sm:h-80 md:h-96 md:mr-6 md:ml-6 mb-4 md:mb-6 animate-rotate-y delay-150 hover:scale-102 transform  duration-200
 ${bgColor} ${textColor} ${classProp}` >
  <h2 class="font-title text-2xl md:text-4xl">{company}</h2>
  <h2 class="font-text font-medium text-xl sm:text-2xl md:text-3xl"> - {role}</h2>
  <h3 class="font-text italic text-sm sm:text-lg pb-4 md:text-xl">{period}</h3>
  <ul class="font-text text-lg  md:text-2xl">
   {tasks.map((task) => {
    return <li class="list-disc ml-6">{task}</li>
   })}
  </ul>
</div>