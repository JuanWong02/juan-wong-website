---
import './src/styles/global.css'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import IconImg from '../assets/img/logo-principal.webp'
const {title} = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content="Página de presentación de Juan Carlos Wong Reyes" />
		<link rel="icon" type="image/svg" href={IconImg.src} />
		<script src="https://kit.fontawesome.com/43e48c909b.js" crossorigin="anonymous" defer></script>
		<title>{title || 'Ing. Juan Carlos Wong Reyes'}</title>
	</head>
		<body class="min-h-screen flex flex-col bg-primary">
			<Header/>
	
			<main class="flex-grow mt-4 lg:mt-8 mb-6 lg:mb-12 ">
				<slot />
			</main>

			<Footer class="mt-auto"/>
			
		</body>
	
</html>


